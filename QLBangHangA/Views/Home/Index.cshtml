@{
    ViewData["Title"] = "Home Page";

    var itemCateTop = ViewBag.CategoryTop;

}


<!-- Categories Section Begin -->
<section class="categories">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 p-0">
                @if (itemCateTop != null)
                {
                    <div class="categories__item categories__large__item set-bg"
                         data-setbg="../images/categories/@itemCateTop.Thumb" style="object-fit:cover">
                        <div class="categories__text">
                            <h1 class="text-white">@itemCateTop.CatName</h1>
                            
                            <p>@(itemCateTop.Products.Count) mặt hàng</p>
                            <a class="text-white" asp-controller="shop" asp-action="index">Mua ngay</a>
                        </div>
                    </div>

                }

            </div>
            <div class="col-lg-6">
                <div class="row">
                    @foreach (var item in ViewBag.CategoryElement)
                    {
                        
                        <div class="col-lg-6 col-md-6 col-sm-6 p-0">
                            <div class="categories__item set-bg" data-setbg="../images/categories/@item.Thumb">
                                <div class="categories__text">
                                    <h4 class="text-white">@item.CatName</h4>
                                    <p>@(item.Products.Count) mặt hàng</p>
                                    <a class="text-white" asp-controller="shop" asp-action="index">Mua ngay</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Categories Section End -->
<!-- Product Section Begin -->
<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-4">
                <div class="section-title">
                    <h4>Sản phẩm mới</h4>
                </div>
            </div>
            <div class="col-lg-8 col-md-8">
                <ul class="filter__controls">
                    <li class="active" data-filter="*">Tất cả</li>
                    @foreach (var itemCat in ViewBag.Category)
                    {
                        string catClass = "cat-" + @itemCat.CatId.ToString();
                        <li data-filter=".@catClass">@itemCat.CatName</li>
                    }

                </ul>
            </div>
        </div>
        <div class="row property__gallery">
            @foreach (var item in ViewBag.Product)
            {
                string catClass = "cat-" + @item.CatId.ToString();
                <div class="col-lg-3 col-md-4 col-sm-6 mix @catClass ">
                    <div class="product__item rounded">
                        <div class="product__item__pic set-bg rounded" data-setbg="../images/products/@item.Thumb">
                            @if(item.HomeFlag == true)
                            {
                                <div class="label new">Mới</div>
                            }
                            <ul class="product__hover">
                                <li><a href="~/images/products/@item.Thumb" class="image-popup"><span class="arrow_expand"></span></a></li>
                                
                                <li><a asp-controller="shop" asp-action="detail" asp-route-id="@item.ProductId"><span class="icon_bag_alt"></span></a></li>
                            </ul>
                        </div>
                        <div class="product__item__text">
                            <h6><a asp-controller="shop" asp-action="detail" asp-route-id="@item.ProductId">@item.ProductName</a></h6>
                            <div class="rating">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                            </div>
                            <div class="product__price">$@item.Price</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Product Section End -->
<!-- Banner Section Begin -->
<section class="banner set-bg" data-setbg="../assets/img/banner/banner-1.jpg">
    <div class="container">
        <div class="row">
            <div class="col-xl-7 col-lg-8 m-auto">
                <div class="banner__slider owl-carousel">
                    <div class="banner__item">
                        <div class="banner__text">
                            <span>The Nike Collection</span>
                            <h1>The New Jordan 99</h1>
                            <a asp-controller="shop" asp-action="index">Mua ngay</a>
                        </div>
                    </div>
                    <div class="banner__item">
                        <div class="banner__text">
                            <span>The Vans Collection</span>
                            <h1>The Vans Old Skool</h1>
                            <a asp-controller="shop" asp-action="index">Mua ngay</a>
                        </div>
                    </div>
                    <div class="banner__item">
                        <div class="banner__text">
                            <span>The Adidas Collection</span>
                            <h1>Chaussures Samba OG</h1>
                            <a asp-controller="shop" asp-action="index">Mua ngay</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Banner Section End -->
<!-- Trend Section Begin -->
<section class="trend spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-6">
                <div class="trend__content">
                    <div class="section-title">
                        <h4>Nổi bật</h4>
                    </div>
                    @foreach (var item in ViewBag.ProductBestSellers)
                    {
                        <a asp-controller="shop" asp-action="detail" asp-route-id="@item.ProductId">
                            <div class="trend__item">
                                <div class="trend__item__pic">
                                    <img class="rounded" style="width:10vh; height:10vh" src="~/images/products/@item.Thumb" alt="">
                                </div>
                                <div class="trend__item__text">
                                    <h6>@item.ProductName</h6>
                                    <div class="rating">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </div>
                                    <div class="product__price">$ @item.Price</div>
                                </div>
                            </div>
                        </a>
                    }
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6">
                <div class="trend__content">
                    <div class="section-title">
                        <h4>Bán chạy</h4>
                    </div>
                    @foreach (var item in ViewBag.ProductHomeFlag)
                    {
                        <a asp-controller="shop" asp-action="detail" asp-route-id="@item.ProductId">
                            <div class="trend__item">
                                <div class="trend__item__pic">
                                    <img class="rounded" style="width:10vh; height:10vh" src="~/images/products/@item.Thumb" alt="">
                                </div>
                                <div class="trend__item__text">
                                    <h6>@item.ProductName</h6>
                                    <div class="rating">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </div>
                                    <div class="product__price">$ @item.Price</div>
                                </div>
                            </div>
                        </a>
                        
                    }
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6">
                <div class="trend__content">
                    <div class="section-title">
                        <h4>Tính năng</h4>
                    </div>
                    @foreach (var item in ViewBag.ProductActive)
                    {
                        <a asp-controller="shop" asp-action="detail" asp-route-id="@item.ProductId">
                            <div class="trend__item">
                                <div class="trend__item__pic">
                                    <img class="rounded" style="width:10vh; height:10vh" src="~/images/products/@item.Thumb" alt="">
                                </div>
                                <div class="trend__item__text">
                                    <h6>@item.ProductName</h6>
                                    <div class="rating">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </div>
                                    <div class="product__price">$ @item.Price</div>
                                </div>
                            </div>
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Trend Section End -->
<!-- Discount Section Begin -->
<section class="discount">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 p-0">
                <div class="discount__pic">
                    <img src="~/assets/img/discount.jpg" alt="">
                </div>
            </div>
            <div class="col-lg-6 p-0">
                <div class="discount__text">
                    <div class="discount__text__title">
                        <span>Discount</span>
                        <h2>Summer 2024</h2>
                        <h5><span>Sale</span> 50%</h5>
                    </div>
                    <div class="discount__countdown" id="countdown-time">
                        <div class="countdown__item">
                            <span>22</span>
                            <p>Days</p>
                        </div>
                        <div class="countdown__item">
                            <span>18</span>
                            <p>Hour</p>
                        </div>
                        <div class="countdown__item">
                            <span>46</span>
                            <p>Min</p>
                        </div>
                        <div class="countdown__item">
                            <span>05</span>
                            <p>Sec</p>
                        </div>
                    </div>
                    <a asp-controller="shop" asp-action="index">Mua ngay</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Discount Section End -->
