@model QLBangHangA.Models.Entities.Product

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="admin" asp-controller="home" asp-action="Index" class="breadcrumb-item">
                <i class="anticon anticon-home m-r-5">Home</i>
            </a>
            <a class="breadcrumb-item" asp-area="admin" asp-controller="adminProduct" asp-action="Index">Danh sách sản phẩm</a>
            <span class="breadcrumb-item active">Chỉnh sửa sản phẩm</span>
        </nav>
    </div>
</div>

<div class="card mb-2">
    <div class="d-flex align-items-center justify-content-between ">
        <div class="d-flex align-items-center">
            <img class="object-fit-cover border rounded" src="~/images/products/@Model.Thumb" width="120" height="90" />
            <h5 class=" m-4"><strong>@Model.ProductName</strong> </h5>
        </div>
    </div>
</div>
<div class="card mb-5">

    <form asp-action="Edit" method="post" asp-controller="adminProduct" asp-area="admin" asp-route-id="@Model.ProductId" enctype="multipart/form-data" class="card-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
        <div>
            <input type="hidden" asp-for="ProductId" />
            <input type="hidden" asp-for="Thumb" />
            <input type="hidden" asp-for="DateCreated" />

            <div class="form-group row">
                <div class="form-group mt-3 col-sm-12 ">
                    <label class="col-form-label">Tên sản phẩm:</label>
                    <div class="">
                        <input type="text" class="form-control" asp-for="ProductName" placeholder="Tên sản phẩm" />
                        <span asp-validation-for="ProductName" asp-format="Vui lòng nhập tên sản phẩm!" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group mt-3  col-sm-6">
                    <label class="col-form-label">Giá :</label>
                    <div class="">
                        <input type="text" class="form-control" asp-for="Price" placeholder="Giá" />
                        <span asp-validation-for="Price" class="text-danger"></span>

                    </div>
                </div>
                <div class="form-group mt-3  col-sm-6">
                    <label class="col-form-label">Giá giảm:</label>
                    <div class="">
                        <input type="text" class="form-control" asp-for="Discount" placeholder="Giá giảm %" />

                    </div>
                </div>
                <div class="form-group mt-3  col-sm-6">
                    <label class=" col-form-label" for="productCategories">Danh mục sản phẩm:</label>
                    <div>
                        <select class="form-select  color-dropdown" asp-for="CatId" asp-items="ViewBag.DanhMuc">
                            <option selected>Chọn danh mục</option>

                        </select>
                    </div>
                </div>

                <div class="form-group mt-3 mr-sm-2 ml-sm-2  col-sm-6">
                    <label class="col-form-label">Trạng thái:</label>
                    <div class="row m-1 mt-0 mb-0">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" asp-for="Active" checked="" />
                            <label class="form-check-label" for="flexSwitchCheckDefault">Công khai</label>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" asp-for="HomeFlag" />
                            <label class="form-check-label" for="flexSwitchCheckDefault">HomeFlag</label>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" asp-for="BestSellers" />
                            <label class="form-check-label" for="flexSwitchCheckDefault">BestSellers</label>
                        </div>
                    </div>
                </div>
                <div class="form-group mt-3  col-sm-6">
                    <label class="col-form-label">Ảnh đại diện:</label>
                    <div class="">
                        <input type="file" name="fthumb" class="form-control-file" asp-for="Thumb" placeholder="Ảnh đại diện" />
                    </div>
                </div>

            </div>
            <div class="form-group mt-5 row">
                <div class="form-group mt-1 col-sm-12 ">
                    <label class="col-form-label">Tiêu đề:</label>
                    <div class="">
                        <input type="text" class="form-control" asp-for="Title" placeholder="Tiêu đề" />

                    </div>
                </div>

                <div class="form-group mt-3  col-sm-12 ">
                    <label for="exampleFormControlTextarea1" class="form-label">Mô tả</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" asp-for="Description" rows="3"></textarea>

                </div>
                <div class="form-group mt-1  col-sm-6">
                    <label class="col-form-label">ShortDesc</label>
                    <div class="">
                        <input type="text" class="form-control" asp-for="ShortDesc" placeholder="ShortDesc" />

                    </div>
                </div>
                <div class="form-group mt-1 col-sm-6 ">
                    <label class="col-form-label">MetaDesc:</label>
                    <div class="">
                        <input type="text" class="form-control" asp-for="MetaDesc" placeholder="MetaDesc" />

                    </div>
                </div>
                <div class="form-group mt-1  col-sm-6 ">
                    <label class=" col-form-label">MetaKey</label>
                    <div class="">
                        <input type="text" class="form-control" asp-for="MetaKey" placeholder="MetaKey" />

                    </div>
                </div>
                <div class="form-group mt-1  col-sm-6">
                    <label class="col-form-label">Tags</label>
                    <div class="">
                        <input type="text" class="form-control" asp-for="Tags" placeholder="Tags" />
                        <span asp-validation-for="Tags" class="text-danger"></span>

                    </div>
                </div>

                <div class="form-group mt-1  col-sm-6">
                    <label class="col-form-label">Alias</label>
                    <div class="">
                        <input type="text" class="form-control" asp-for="Alias" placeholder="Alias" />

                    </div>
                </div>

            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10 mt-4">
                <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                <a asp-controller="adminProduct" asp-action="Index" class="btn btn-secondary">Quay lại</a>

            </div>
        </div>
    </form>
</div>

