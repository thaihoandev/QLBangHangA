@model QLBangHangA.Models.Entities.Category

@{
    ViewData["Title"] = "Details";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb breadcrumb-style1">
        <li class="breadcrumb-item">
            <a asp-area="admin" asp-controller="home" asp-action="index">Trang chủ</a>
        </li>
        <li class="breadcrumb-item"><a asp-area="admin" asp-controller="adminCategory" asp-action="Index">Danh sách danh mục</a></li>
        <li class="breadcrumb-item active">Chi tiết danh mục</li>
    </ol>
</nav>

<div class="card container p-3">
    <h4>Danh mục sản phẩm</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Thumb)
        </dt>
        <dd class="col-sm-10">
            <img class=" border rounded" style="object-fit:cover" src="~/images/categories/@Model.Thumb" width="120" height="90" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CatName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CatName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CatDesc)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CatDesc)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Published)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Published)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Alias)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Alias)
        </dd>
        
    </dl>

    <div class="m-2">
        <a asp-action="Edit" asp-route-id="@Model?.CatId">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>

