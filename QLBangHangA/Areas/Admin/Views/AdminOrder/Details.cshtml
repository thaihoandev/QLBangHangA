@model QLBangHangA.Models.Entities.Order

<nav aria-label="breadcrumb">
    <ol class="breadcrumb breadcrumb-style1">
        <li class="breadcrumb-item">
            <a asp-area="admin" asp-controller="home" asp-action="Index">Trang chủ</a>
        </li>
        <li class="breadcrumb-item"><a asp-area="admin" asp-controller="adminOrder" asp-action="Index">Danh sách đơn đặt hàng</a></li>
        <li class="breadcrumb-item active">Chi tiết đơn : @Model.OrderId</li>
    </ol>
</nav>

<div class="card mb-5">
    <form  enctype="multipart/form-data" class="card-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
        <div>
            <div class="form-group row">
                <div class="form-group mt-3 col-sm-12 ">
                    <label class="col-form-label">ID đơn hàng:</label>
                    <div class="">
                        <input type="text" class="form-control" disabled asp-for="OrderId" />

                    </div>
                </div>

                <div class="form-group mt-3 col-sm-6 ">
                    <label class="col-form-label">Ngày đặt:</label>
                    <div class="">
                        <input type="text" class="form-control" disabled asp-for="OrderDate" />

                    </div>
                </div>
                <div class="form-group mt-3 col-sm-6 ">
                    <label class="col-form-label">Tổng tiền:</label>
                    <div class="">
                        <input type="text" class="form-control" disabled asp-for="TotalPrice" />

                    </div>
                </div>
                <div class="form-group mt-3  col-sm-12">
                    <div class="table-responsive ">
                        <table class="table">
                            <thead>
                                <tr>
                                    
                                    <th scope="col">Tên sản phẩm</th>
                                    <th scope="col">Đơn giá</th>
                                    <th scope="col">số lượng</th>
                                    <th scope="col">Tổng tiền</th>
                                    <th scope="col">#</th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.OrderDetails != null)
                                {
                                    foreach (var item in ViewBag.OrderDetails)
                                    {
                                        <tr>
                                            <td>
                                                @item.ProductId
                                            </td>
                                            <td>
                                                <p class="mb-1">@item.Price</p>
                                            </td>
                                            <td>
                                                <p class="mb-1">@item.Quantity</p>
                                            </td>
                                            <td>
                                                @(item.Price * item.Quantity)
                                            </td>

                                            <td>

                                            </td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
            <div class="form-group mt-5 row">
                

            </div>
        </div>
    </form>
    <div class="form-group row">
        <div class="col-sm-10 m-4">
            <a class="btn btn-primary" asp-controller="adminOrder" asp-action="Index">Quay lại</a>
        </div>
    </div>
</div>








